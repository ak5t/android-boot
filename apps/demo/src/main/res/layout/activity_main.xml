<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chartPieContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/to_db_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/random_1"
        android:onClick="onClick"
        android:text="db_test"
        android:textColor="@android:color/white"
        android:textSize="19sp" />


    <TextView
        android:id="@+id/toLogin"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/random_1"
        android:onClick="onClick"
        android:text="login"
        android:textColor="@android:color/white"
        android:textSize="19sp" />


    <TextView
        android:id="@+id/toRemoteConfig"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/random_4"
        android:onClick="onClick"
        android:text="remote-config"
        android:textColor="@android:color/white"
        android:textSize="19sp" />


    <TextView
        android:id="@+id/subscriptionText"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal"
        android:background="@color/random_1"
        android:textColor="@android:color/white"
        android:textSize="19sp" />

</LinearLayout>
