<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/account_header_bg"
        app:theme="@style/ThemeOverlay.AppCompat.Dark">


        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="worklate"
            tools:text="worklate" />

    </androidx.appcompat.widget.Toolbar>



    <Button
        android:id="@+id/work_late_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "action_0"
        />

    <Button
        android:id="@+id/switch_map_action"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="switch_map_action"
        />

    <Button
        android:id="@+id/flat_map_action"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="flat_map_action"
        />

    <Button
        android:id="@+id/concat_map_action"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="concat_map_action"
        />


    <Button
        android:id="@+id/concat_action"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="concat_action"
        />

    <Button
        android:id="@+id/merge_action"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="merge_action"
        />

    <Button
        android:id="@+id/zip_action"
        android:layout_marginTop="@dimen/size20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zip_action"
        />

</LinearLayout>
